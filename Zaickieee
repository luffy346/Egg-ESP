

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local RunService = game:GetService("RunService")

-- SETTINGS
local ESP_COLOR = Color3.fromRGB(255, 0, 0) -- Red
local ESP_TEXT = "ðŸ¥š EGG"
local TITLE = "Zaickie"

-- GUI SETUP
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "ZaickieESP"
ScreenGui.ResetOnSpawn = false
ScreenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- LOGO BUTTON
local LogoButton = Instance.new("ImageButton", ScreenGui)
LogoButton.Size = UDim2.new(0, 100, 0, 100)
LogoButton.Position = UDim2.new(0, 20, 0, 200)
LogoButton.BackgroundTransparency = 1
LogoButton.Image = "rbxassetid://1234567890" -- Replace with your custom logo ID

local TextLabel = Instance.new("TextLabel", LogoButton)
TextLabel.Size = UDim2.new(1, 0, 0.3, 0)
TextLabel.Position = UDim2.new(0, 0, 1, 0)
TextLabel.Text = TITLE
TextLabel.TextColor3 = ESP_COLOR
TextLabel.TextScaled = true
TextLabel.BackgroundTransparency = 1
TextLabel.TextStrokeTransparency = 0

-- UI BOX (Hidden initially)
local BoxFrame = Instance.new("Frame", ScreenGui)
BoxFrame.Size = UDim2.new(0, 200, 0, 50)
BoxFrame.Position = UDim2.new(0, 20, 0, 320)
BoxFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
BoxFrame.Visible = false

local ToggleLabel = Instance.new("TextLabel", BoxFrame)
ToggleLabel.Size = UDim2.new(0.7, 0, 1, 0)
ToggleLabel.Text = "Egg ESP"
ToggleLabel.TextColor3 = ESP_COLOR
ToggleLabel.BackgroundTransparency = 1
ToggleLabel.TextScaled = true

local ToggleButton = Instance.new("TextButton", BoxFrame)
ToggleButton.Size = UDim2.new(0.3, 0, 1, 0)
ToggleButton.Position = UDim2.new(0.7, 0, 0, 0)
ToggleButton.Text = "OFF"
ToggleButton.TextColor3 = Color3.new(1, 0, 0)
ToggleButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
ToggleButton.TextScaled = true

-- CLICK LOGO TO TOGGLE BOX
LogoButton.MouseButton1Click:Connect(function()
    BoxFrame.Visible = not BoxFrame.Visible
end)

-- EGG ESP FUNCTION
local EggESPEnabled = false

local function createESP(part)
    if part:FindFirstChild("ZaickieESP") then return end
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "ZaickieESP"
    billboard.Adornee = part
    billboard.Size = UDim2.new(0, 100, 0, 40)
    billboard.AlwaysOnTop = true

    local textLabel = Instance.new("TextLabel", billboard)
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.Text = ESP_TEXT
    textLabel.TextColor3 = ESP_COLOR
    textLabel.BackgroundTransparency = 1
    textLabel.TextStrokeTransparency = 0
    textLabel.TextScaled = true

    billboard.Parent = part
end

local function updateESP()
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and obj.Name:lower():find("egg") then
            createESP(obj)
        end
    end
end

RunService.RenderStepped:Connect(function()
    if EggESPEnabled then
        updateESP()
    else
        for _, obj in pairs(workspace:GetDescendants()) do
            if obj:IsA("BasePart") then
                local esp = obj:FindFirstChild("ZaickieESP")
                if esp then
                    esp:Destroy()
                end
            end
        end
    end
end)

ToggleButton.MouseButton1Click:Connect(function()
    EggESPEnabled = not EggESPEnabled
    if EggESPEnabled then
        ToggleButton.Text = "ON"
        ToggleButton.TextColor3 = Color3.fromRGB(0, 255, 0)
    else
        ToggleButton.Text = "OFF"
        ToggleButton.TextColor3 = Color3.fromRGB(255, 0, 0)
    end
end)

print(TITLE .. " Loaded âœ…")
