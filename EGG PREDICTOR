--[[ 
   Grow A Garden: Egg ESP Script
   Use with Delta Executor (or any Roblox Lua executor)
   This script scans the game workspace for 'Egg' objects and
   creates Billboards over them so you can see where they are.
]]

-- CONFIG
local ESP_COLOR = Color3.fromRGB(255, 255, 0) -- Yellow for eggs
local ESP_TEXT = "ðŸ¥š EGG"

-- FUNCTION TO CREATE ESP
local function createESP(part)
    local billboard = Instance.new("BillboardGui")
    billboard.Name = "EggESP"
    billboard.Adornee = part
    billboard.Size = UDim2.new(0, 100, 0, 40)
    billboard.AlwaysOnTop = true

    local textLabel = Instance.new("TextLabel", billboard)
    textLabel.Size = UDim2.new(1, 0, 1, 0)
    textLabel.Text = ESP_TEXT
    textLabel.TextColor3 = ESP_COLOR
    textLabel.BackgroundTransparency = 1
    textLabel.TextStrokeTransparency = 0
    textLabel.TextScaled = true

    billboard.Parent = part
end

-- MAIN LOOP
while true do
    for _, obj in pairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and obj.Name:lower():find("egg") then
            if not obj:FindFirstChild("EggESP") then
                createESP(obj)
            end
        end
    end
    wait(5) -- Checks every 5 seconds
end
